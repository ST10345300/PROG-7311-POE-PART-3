@model agri_connect.Models.Product
@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Product</h2>

<form asp-action="Add" method="post">
    <div class="mb-2">
        <input asp-for="Name" class="form-control" placeholder="Product Name" required />
    </div>
    <div class="mb-2">
        <input asp-for="Category" class="form-control" placeholder="Category" required />
    </div>
    <div class="mb-2">
        <input asp-for="Price" type="number" class="form-control" placeholder="Price" required />
    </div>
    <div class="mb-2">
        <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Add Product</button>
</form>
